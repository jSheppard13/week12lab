<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/txtTask" android:hint="Enter Task Name"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/txtMessage"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/txtMessage"
            android:hint="Enter Task Description" app:layout_constraintTop_toBottomOf="@+id/txtTask"
            android:layout_marginBottom="37dp" app:layout_constraintBottom_toTopOf="@+id/btnMessage"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnMessage" app:layout_constraintTop_toBottomOf="@+id/txtMessage"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="@+id/txtNotes"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtNotes"
            app:layout_constraintTop_toBottomOf="@+id/btnMessage" android:layout_marginBottom="33dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="39dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="39dp" android:layout_marginEnd="39dp" android:layout_marginRight="39dp"/>
</android.support.constraint.ConstraintLayout>